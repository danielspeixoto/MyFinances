<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danielspeixoto.meufinanceiro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.InsertTransactionActivity"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.UpdateTransactionActivity"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.InfoTransactionActivity"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.SearchPeriodActivity"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.PayedActivity"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.AllInstitutionsActivity"
            android:label="@string/title_activity_all_institutions"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.danielspeixoto.meufinanceiro.view.activity.MainActivity" />
        </activity>
    </application>

</manifest>