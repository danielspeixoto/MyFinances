<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.danielspeixoto.meufinanceiro.view.activity.InfoTransactionActivity"
    tools:showIn="@layout/activity_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/infoLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/institutionText"
                android:text="Institution"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/descriptionText"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip "
                android:textSize="24sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="10dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    android:text="Launched Date"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_marginRight="15dp"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:ems="10"
                    android:id="@+id/launchedDateText"
                    android:text="10/10/1990"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:text="Expiration Date"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_marginRight="15dp"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:ems="10"
                    android:id="@+id/expirationDateText"
                    android:text="20/20/2010"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:text="Amount"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_marginRight="15dp"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="normal|bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/amountText"
                    android:text="$500"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

            </GridLayout>
        </LinearLayout>

</ScrollView>
